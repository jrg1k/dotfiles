### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
set $bindcmd bindsym --to-code
# Your preferred terminal emulator
set $term alacritty
# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu wofi

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg "#282828" solid_color
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
output 'Unknown MSI MAG271C 0x00000083' {
    resolution 1920x1080@144Hz 
    position 0,0
}
output 'Unknown MSI MAG271C 0x00000175' {
    resolution 1920x1080@144Hz
    position 1920,0
}
# output LVDS-1 {
#     resolution 1600x900
#     position 0,0
# }

### Idle configuration
#
# Example configuration:
#
exec swayidle -w \
         timeout 900 'swaylock -f -c 000000' \
         timeout 1000 'swaymsg "output * dpms off"' \
         resume 'swaymsg "output * dpms on";sleep 2;swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input "type:keyboard" {
    xkb_layout "us,no"
    xkb_variant ","
    xkb_numlock enable
    xkb_options "grp:shift_caps_toggle"
}

input "type:touchpad" {
    natural_scroll enabled
}

input "type:pointer" {
    accel_profile "flat"
    pointer_accel 0.5
}

### Key bindings
#
# Basics:
#
    # Start a terminal
    $bindcmd $mod+Return exec $term

    # Kill focused window
    $bindcmd $mod+Shift+q kill

    # Start your launcher
    $bindcmd $mod+d exec $menu

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    $bindcmd $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    $bindcmd $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
    # Move your focus around
    $bindcmd $mod+$left focus left
    $bindcmd $mod+$down focus down
    $bindcmd $mod+$up focus up
    $bindcmd $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    $bindcmd $mod+Left focus left
    $bindcmd $mod+Down focus down
    $bindcmd $mod+Up focus up
    $bindcmd $mod+Right focus right

    # Move the focused window with the same, but add Shift
    $bindcmd $mod+Shift+$left move left
    $bindcmd $mod+Shift+$down move down
    $bindcmd $mod+Shift+$up move up
    $bindcmd $mod+Shift+$right move right
    # Ditto, with arrow keys
    $bindcmd $mod+Shift+Left move left
    $bindcmd $mod+Shift+Down move down
    $bindcmd $mod+Shift+Up move up
    $bindcmd $mod+Shift+Right move right
#
# Workspaces:
#
    # Switch to workspace
    $bindcmd $mod+1 workspace number 1
    $bindcmd $mod+2 workspace number 2
    $bindcmd $mod+3 workspace number 3
    $bindcmd $mod+4 workspace number 4
    $bindcmd $mod+5 workspace number 5
    $bindcmd $mod+6 workspace number 6
    $bindcmd $mod+7 workspace number 7
    $bindcmd $mod+8 workspace number 8
    $bindcmd $mod+9 workspace number 9
    $bindcmd $mod+0 workspace number 10
    # Move focused container to workspace
    $bindcmd $mod+Shift+1 move container to workspace number 1
    $bindcmd $mod+Shift+2 move container to workspace number 2
    $bindcmd $mod+Shift+3 move container to workspace number 3
    $bindcmd $mod+Shift+4 move container to workspace number 4
    $bindcmd $mod+Shift+5 move container to workspace number 5
    $bindcmd $mod+Shift+6 move container to workspace number 6
    $bindcmd $mod+Shift+7 move container to workspace number 7
    $bindcmd $mod+Shift+8 move container to workspace number 8
    $bindcmd $mod+Shift+9 move container to workspace number 9
    $bindcmd $mod+Shift+0 move container to workspace number 10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    $bindcmd $mod+b splith
    $bindcmd $mod+v splitv

    # Switch the current container between different layout styles
    $bindcmd $mod+s layout stacking
    $bindcmd $mod+w layout tabbed
    $bindcmd $mod+e layout toggle split

    # Make the current focus fullscreen
    $bindcmd $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    $bindcmd $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    # $bindcmd $mod+space focus mode_toggle

    # Move focus to the parent container
    $bindcmd $mod+a focus parent

#
# Special keybinds:
#
    $bindcmd XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    $bindcmd XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    $bindcmd XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    $bindcmd XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
    $bindcmd XF86MonBrightnessDown exec brightnessctl set 5%-
    $bindcmd XF86MonBrightnessUp exec brightnessctl set +5%
    $bindcmd XF86AudioPlay exec playerctl play-pause
    $bindcmd XF86AudioNext exec playerctl next
    $bindcmd XF86AudioPrev exec playerctl previous
    $bindcmd XF86Search exec bemenu-run

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    $bindcmd $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    $bindcmd $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    $bindcmd $left resize shrink width 10px
    $bindcmd $down resize grow height 10px
    $bindcmd $up resize shrink height 10px
    $bindcmd $right resize grow width 10px

    # Ditto, with arrow keys
    $bindcmd Left resize shrink width 10px
    $bindcmd Down resize grow height 10px
    $bindcmd Up resize shrink height 10px
    $bindcmd Right resize grow width 10px

    # Return to default mode
    $bindcmd Return mode "default"
    $bindcmd Escape mode "default"
}
$bindcmd $mod+r mode "resize"

focus_follows_mouse no
default_border pixel 2

client.focused #83a598 #83a598 #83a598 #83a598 #83a598
client.unfocused #928374 #928374 #928374 #928374 #928374 
client.focused_inactive #928374 #928374 #928374 #928374 #928374

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
exec waybar

set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'Adwaita'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name 'Cantarell 12'
}

seat seat0 xcursor_theme Adwaita 16

exec /usr/bin/xsettingsd

exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
